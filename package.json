{
  "name": "monorepo-template",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "scripts"
    ]
  },
  "scripts": {
    "clean": "git clean -fdx -e node_modules",
    "build-only": "lage build",
    "build": "lage build && lage types",
    "types": "lage types",
    "test": "lage test",
    "lint": "lage lint",
    "lage": "lage",
    "ci": "yarn lage build types test lint && yarn checkchange",
    "beachball": "beachball -b origin/main",
    "change": "yarn beachball change",
    "checkchange": "yarn beachball check",
    "release": "yarn beachball publish",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "beachball": "^2.20.0",
    "lage": "0.29.1",
    "patch-package": "^6.4.7",
    "prettier": "^2.2.1",
    "ts-jest": "^29.0.3"
  },
  "resolutions": {
    "cross-fetch": "^3.1.5",
    "glob-parent": "^6.0.2",
    "minimist": "^1.2.6",
    "node-fetch": "^2.6.7",
    "node-forge": "^1.3.1",
    "trim": "^1.0.1"
  }
}
