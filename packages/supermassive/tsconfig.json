{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react",
    "skipLibCheck": true,
    "paths": {
      "@graphql-tools/schema": ["./node_modules/@graphql-tools/schema"],
      "graphql": ["./node_modules/graphql"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
